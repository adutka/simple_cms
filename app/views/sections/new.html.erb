<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="sections new">
  <h2>Create Sections</h2>

  <%= form_for(:section, :url => {:action => 'create'}) do |f| %>

    <table summary="Section form fields">
      <tr>
        <th>Subject ID</th>
        <td><%= f.text_field(:page_id) %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Content</th>
        <td><%= f.text_field (:content) %></td>
      </tr>
      <tr>
        <th>Context Type</th>
        <td><%= f.text_field (:context_type) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Create Section") %>
    </div>
  <% end %>
</div>